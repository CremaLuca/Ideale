{
  "manifest_version": 3,
  "name": "Ideale",
  "version": "1.0",
  "description": "Calculate distances and travel times from your locations to properties on Idealista",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.idealista.it/*",
    "https://maps.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.idealista.it/*"],
      "js": ["browser-polyfill.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "idealista-distance@extension.local",
      "strict_min_version": "109.0"
    }
  }
}
